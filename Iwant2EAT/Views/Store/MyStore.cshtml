@model List<Iwant2EAT.Models.Store>
@Layout@{
    ViewBag.Title = "MyStore | EEEaTTT";
    ViewBag.HomeActive = "active";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div id="msgDiv">
    @(new HtmlString(ViewBag.SearchHtml))
</div>
<div>
    @foreach (Iwant2EAT.Models.Store store in Model)
    {
        <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
                <img data-src="holder.js/100%x200" alt="100%x200" style="height: 300px; width: 100%; display: block;" src="@store.ImageUrl" data-holder-rendered="true">
                <div class="caption">
                    <h3><strong>@store.Name</strong><small>@(string.IsNullOrEmpty(store.Branch) ? "" : string.Format(" ({0})", store.Branch))</small></h3>
                    <p>電話：@store.Phone</p>
                    <p>地址：@store.Address</p>
                    <p>營業時間：@(string.Format("{0} - {1}", store.OpeningTime, store.ClosingTime))</p>
                    <p>店家介紹：@if (store.Introduction.Length > 20)
                    { @(store.Introduction.Remove(20) + " ... (Continue)")}
                    else
                    { @store.Introduction }</p>
                    <p align="right">
                        <a href="/Store/Detail?Guid=@store.Guid" class="btn btn-primary" role="button">Learn more</a>
                        <a href="/Store/Modify?Guid=@store.Guid" class="btn btn-info" role="button">Modify Info</a>
                        <a href="/Store/Delete?Guid=@store.Guid" class="btn btn-danger" role="button">Delete Store</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>